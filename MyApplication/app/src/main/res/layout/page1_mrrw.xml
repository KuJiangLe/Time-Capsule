<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/dabiaoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日任务"
            android:textSize="50sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="11dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="11dp"
        android:layout_below="@id/dabiaoti">
        <CheckBox
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一任务：背诵单词"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一任务：背诵单词"
            android:textSize="20sp"
            android:layout_below="@id/one"
            android:layout_marginTop="15dp"/>
        <CheckBox
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一任务：背诵单词"
            android:textSize="20sp"
            android:layout_below="@id/two"
            android:layout_marginTop="15dp"/>
        <CheckBox
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一任务：背诵单词"
            android:textSize="20sp"
            android:layout_below="@id/three"
            android:layout_marginTop="15dp"/>
        <CheckBox
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一任务：背诵单词"
            android:textSize="20sp"
            android:layout_below="@id/four"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp">

        <ImageButton
            android:id="@+id/tianjiaanniu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ADD" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F0F0F0"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:background="@drawable/Blue_1"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:background="@drawable/Grey_2"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:background="@drawable/Grey_3"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:background="@drawable/Grey_4"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:background="@drawable/Grey_5"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </RelativeLayout>




    </RelativeLayout>

